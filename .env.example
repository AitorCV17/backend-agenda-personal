# Configuración de la base de datos PostgreSQL
DATABASE_URL=postgresql://usuario:contraseña@localhost:5432/nombre_basedatos

# JWT
JWT_SECRET=tu_clave_secreta
JWT_EXPIRATION=1h

# Configuración de nodemailer
EMAIL_HOST=smtp.ejemplo.com
EMAIL_PORT=587
EMAIL_USER=tu-email@ejemplo.com
EMAIL_PASS=tu_contraseña_email

# Configuración de Google OAuth
GOOGLE_CLIENT_ID=tu_google_client_id
GOOGLE_CLIENT_SECRET=tu_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# Configuración del job de recordatorios (cron)
REMINDER_JOB_SCHEDULE=0 * * * *

# Puerto del backend
PORT=3020

# URL del frontend
FRONTEND_URL=https://tu-frontend.vercel.app
